// Jenkinsfile (Declarative Pipeline)
// Author:CodeFilmsPLC
// Docker + Jenkins
pipeline {
   agent any
   
   stages {
      stage('Build') {
         steps {
            echo 'Building stage'
            sh 'mvn clean package'
         }
      }
      
      // there is docker..
      stage('Containerize') {
         steps {
            echo 'Containerization stage'
            // get the dockerfile
            // run docker user
            echo 'building docker image'
            sh 'docker build . -t  codefilmsplc/jenkins-docker-app:alpha'
            
            //login to docker
            echo 'logging to docker hub'
            sh 'docker login -u "\"wearecodefilms@gmail.com\"" -p "\"devPwd2024!"\" docker.io'
            
            //send the image to the hub
            echo 'pushing docker image to cloud'
            sh 'docker image push codefilmsplc/jenkins-docker-app:alpha'
            
         }
         
         
      }
      
      
      stage('Deployment') {
         steps {
            echo 'Deployment stage'
            // get the dockerfile--
            echo 'log into legacy server for deployment' 
            // log onto the legacy server   s 
            sh 'ssh appuser@192.168.4.165 "docker pull codefilmsplc/jenkins-docker-app:alpha > /dev/null 2>&1 &"'
            //send the image to the hub 
            sh 'ssh appuser@192.168.4.165 "docker run -p 8082:8082 codefilmsplc/jenkins-docker-app:alpha > /dev/null 2>&1 &"'
            
         }
         
         
      }
      
      
      
      stage('End') {
         steps {
            sh 'exit'
         }
      }
      
   }
   
}